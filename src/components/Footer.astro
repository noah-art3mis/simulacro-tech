---
import { Mail, MapPin, Phone } from 'lucide-astro';
---

<footer class="border-t border-[var(--color-border)] mt-auto bg-[var(--color-bg-elevated)]/50">
	<div class="max-w-6xl mx-auto px-6 lg:px-8 py-16">
		<div class="grid grid-cols-1 md:grid-cols-4 gap-12">
			<!-- Brand -->
			<div class="md:col-span-2">
				<a href="/" class="flex items-center gap-3 mb-4">
					<img 
						src={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/simulacro.png`} 
						alt="Simulacro" 
						class="w-8 h-8"
					/>
					<span class="text-lg font-semibold tracking-tight">
						simulacro<span class="text-[var(--color-text-muted)]">.tech</span>
					</span>
				</a>
				<p class="text-sm text-[var(--color-text-muted)] max-w-xs leading-relaxed">
					Human-centered AI and data consulting.
				</p>
			</div>

			<!-- Contact -->
			<div>
				<h3 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-accent)] mb-4">Contact</h3>
				<div class="space-y-3">
					<a href="mailto:contact@simulacro.tech" class="flex items-center gap-3 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">
						<Mail size={16} class="shrink-0" />
						contact@simulacro.tech
					</a>
					<a href="tel:+5561981334405" class="flex items-center gap-3 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">
						<Phone size={16} class="shrink-0" />
						+55 61 98133-4405
					</a>
					<div class="flex items-center gap-3 text-sm text-[var(--color-text-muted)]">
						<MapPin size={16} class="shrink-0" />
						London, UK / Bras√≠lia, Brazil
					</div>
				</div>
			</div>

			<!-- Connect -->
			<div>
				<h3 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-accent)] mb-4">Connect</h3>
				<div class="flex gap-4">
					<a
						href="https://linkedin.com/in/gustavoarcos"
						target="_blank"
						rel="noopener noreferrer"
						class="w-10 h-10 rounded-full border border-[var(--color-border)] flex items-center justify-center text-[var(--color-text-muted)] hover:text-[var(--color-accent)] hover:border-[var(--color-accent)]/50 transition-all duration-300"
					>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>

		<div class="mt-12 pt-8 border-t border-[var(--color-border)] flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-[var(--color-text-muted)]">
			<p>&copy; {new Date().getFullYear()} Simulacro Tech. All rights reserved.</p>
		</div>
	</div>
</footer>
